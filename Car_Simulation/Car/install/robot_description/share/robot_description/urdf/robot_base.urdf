<?xml version="1.0"?>
<robot name="robot">
    
    
    
<!-- Robot Footprint -->
  <link name="base_footprint"/>
  
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 -0.005" rpy="0 0 0"/>
  </joint>
  
 
<!------------------------------------------------------------------------------------------------------------>
<!-- base link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.04"/>
      </geometry>
      <material name="blue">
      	<color rgba = "0.1 0.1 1.0 0.5"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.04"/>
      </geometry>
      <material name="blue">
          <color rgba="0.1 0.1 1.0 0.5" /> 
      </material>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.00019333333" ixy="0" ixz="0" iyy="0.00033333333" iyz="0" izz="0.00019333333"/>
    </inertial>
  </link>
    
    
<!------------------------------------------------------------------------------------------------------------>   
<!-- laser link -->
  <link name="laser_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="black">
          <color rgba="0.0 0.0 0.0 0.8" /> 
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 0.5" /> 
      </material>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0000417" ixy="0" ixz="0" iyy="0.0000417" iyz="0" izz="0.00002"/>
    </inertial>
  </link>

  <!-- laser joint -->
    <joint name="laser_joint" type="fixed">
        <parent link="base_link" />
        <child link="laser_link" />
        <origin xyz="0 0 0.03" />
    </joint>
    
<!------------------------------------------------------------------------------------------------------------>   
<!-- left wheel link -->
  <link name="left_wheel_link">
      <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="yellow">
          <color rgba="1.0 1.0 0.0 0.8" /> 
      </material>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.02" radius="0.02"/>
        </geometry>
        <material name="black">
          <color rgba="0.0 0.0 0.0 0.5" /> 
        </material>
     </collision>
     <inertial>
       <mass value="0.02"/>
       <inertia ixx="0.00000278" ixy="0" ixz="0" iyy="0.00000278" iyz="0" izz="0.00000004"/>
     </inertial>
  </link>

  <!-- left wheel joint -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_link" />
        <origin xyz="0 -0.05 -0.015" rpy="1.57079 0 0"/>
        <axis xyz="0 0 1" />
    </joint>

<!------------------------------------------------------------------------------------------------------------>   
<!-- right wheel link -->
  <link name="right_wheel_link">
      <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="yellow">
          <color rgba="1.0 1.0 0.0 0.8" /> 
      </material>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.02" radius="0.02"/>
        </geometry>
        <material name="black">
          <color rgba="0.0 0.0 0.0 0.5" /> 
        </material>
     </collision>
     <inertial>
       <mass value="0.02"/>
       <inertia ixx="0.00000278" ixy="0" ixz="0" iyy="0.00000278" iyz="0" izz="0.00000004"/>
     </inertial>
  </link>
<!-- right wheel joint -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_link" />
        <origin xyz="0 0.05 -0.015" rpy="-1.57079 0 0"/>
        <axis xyz="0 0 1" />
    </joint> 
<!------------------------------------------------------------------------------------------------------------>    
<!-- front boll link -->
  <link name="front_boll_link">
      <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
      	<sphere radius="0.02"/>
      </geometry>
      <material name="green">
          <color rgba="0.0 1.0 0.0 0.8" /> 
      </material>
    </visual>
  </link>
  <gazebo reference="front_boll_link">
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp value="1000000.0" />
    <kd value="10.0" />
  </gazebo>
<!-- front boll joint -->
    <joint name="front_boll_joint" type="fixed">
        <parent link="base_link" />
        <child link="front_boll_link" />
        <origin xyz="-0.025 0 -0.015" />
    </joint>
<!------------------------------------------------------------------------------------------------------------>
<!-- behind boll link -->
  <link name="behind_boll_link">
      <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="blue">
          <color rgba="0.0 0.0 1.0 0.8" /> 
      </material>
    </visual>
  </link>
  <gazebo reference="behind_boll_link">
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp value="1000000.0" />
    <kd value="10.0" />
  </gazebo>
<!-- behind boll joint -->
    <joint name="behind_boll_joint" type="fixed">
        <parent link="base_link" />
        <child link="behind_boll_link" />
        <origin xyz="0.025 0.0 -0.015" />
    </joint>
<!------------------------------------------------------------------------------------------------------------>    
<!-- Imu link -->
  <link name="imu_link">
      <visual>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>
  </link>
<!-- imu joint -->
  <joint name="imu_joint" type="fixed">
    <parent link="base_link" />
    <child link="imu_link" />
    <origin xyz="0 0 0.03" />
  </joint>
</robot>
